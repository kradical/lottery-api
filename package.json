{
  "name": "interview",
  "description": "A minimal template project for TypeScript interviews",
  "version": "1.0.0",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/interview-typescript.git"
  },
  "engines": {
    "node": "^10.9.0"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "lint": "eslint --ext .ts .",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "express-async-router": "^0.1.15",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/node-fetch": "^2.3.7",
    "@types/supertest": "^2.0.7",
    "eslint": "^5.15.1",
    "eslint-config-neo": "^0.3.0",
    "husky": "^2.4.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.ts": [
        "eslint --quiet",
        "git add"
      ],
      "*.{ts,json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
